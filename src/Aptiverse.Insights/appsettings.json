{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=aptiverse;Username=postgres;Password=postgres"
  },
  "Jwt": {
    "Key": "${JWT_KEY:-REPLACE_WITH_32_CHAR_SECRET_KEY_IN_PRODUCTION}",
    "Issuer": "aptiverse-api",
    "Audience": "aptiverse-users",
    "ExpireMinutes": 60
  },
  "Authentication": {
    "Google": {
      "ClientId": "${GOOGLE_CLIENT_ID:-GOOGLE_CLIENT_ID}",
      "ClientSecret": "${GOOGLE_CLIENT_SECRET:-GOOGLE_CLIENT_SECRET}"
    }
  },
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  "Cors": {
    "AllowedOrigins": ["http://localhost:3000", "http://localhost:5173"]
  }
}
